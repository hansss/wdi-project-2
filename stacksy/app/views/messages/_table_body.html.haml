- @messages.each do |message|
  - classname = message.classname_for_user(current_user)
  %tr{class: classname}
    %td{class: classname}
      = link_to message.sender.name, profile_path(message.sender)
    %td{class: classname}
      = link_to message.recipient.name, profile_path(message.recipient)
    %td{class: classname}
      = message.date
    %td{class: classname}
      = message.content
      / .message-box
      /   = form_tag create_message_path(recipient_id: user.id), id: 'message-content-' + user.id.to_s, remote: true do
      /     = fields_for :message do |i|
      /       %br
      /       = i.text_area :content, cols: '50', rows: '5'
      /     %br
      /     = submit_tag "Send", class: 'send-button btn btn-success'
    %td{class: classname}
      .reply-button.btn.btn-success Reply       
      .btn.btn-info Delete