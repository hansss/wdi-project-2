%h2 Search

= search_form_for @q, url: user_search_path do |f|
  = f.label "Gender"
  = f.select :gender_title_eq, options_from_collection_for_select(Gender.all, "title", "title"), include_blank: true
  %br
  %p Age Range
  %input#amount{readonly: true}
  #slider
  = f.hidden_field :birthday_lteq
  = f.hidden_field :birthday_gteq
  = f.submit "Search"

%body
  %header
    -@users.each do |user|
      .user_search
        =image_tag(user.profile.image_1)
        =user.name



  
